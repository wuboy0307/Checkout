<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyTheme" parent="Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SplashNoTitleBar" parent="android:Theme.NoTitleBar" />

    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/facebook</item>
        <item name="android:background">@color/facebook</item>
        <item name="android:text">@android:color/black</item>
        <item name="backgroundSplit">@color/facebook</item>
        <item name="android:backgroundSplit">@color/facebook</item>
    </style>

    <!-- style for the tabs -->
    <style name="MyActionBarTabStyle" parent="Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_bg</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MenuTheme" parent="android:Theme.NoTitleBar" />

    <style name="smile1" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/smiles1</item>
    </style>

    <style name="smile2" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/smiles2</item>
    </style>

    <style name="smile3" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/smiles3</item>
    </style>

</resources>